RewriteEngine On

# Redirect URLs like /fr/md/page.html to /fr/page.html
RewriteRule ^([a-z]{2})/md/([^/]+\.html)$ /$1/$2 [R=301,L]

# Only apply redirection for the root URL
RewriteCond %{REQUEST_URI} ^/$

# Check if the browser prefers French
RewriteCond %{HTTP:Accept-Language} ^fr [NC]
RewriteRule ^$ /fr/ [R=302,L]

# Otherwise, redirect to English (default)
RewriteRule ^$ /en/ [R=302,L]